<h1>Editing book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.full_messages.each do |message| %>
    <div class="error">
      error:<%= message %>
    </div>
  <% end %>
<% end %>

<%= form_with model: @book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="checkbox"><%= f.submit "Update Book" %></div>
<% end %>

<%= link_to "show",book_path(@book) %>
