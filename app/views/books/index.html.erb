<h1>Books</h1>
<% if @book.errors.any? %>
  <%= @book.errors.full_messages.each do |message| %>
    <div class="error">
      error:<%= message %>
    </div>
  <% end %>
<% end %>

<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book) %></td>
          <td><%= link_to "Edit",edit_book_path(book) %></td>
          <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm" => "本当に削除しますか？"%></td>
        </tr>
      <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="checkbox"><%= f.submit "Create Book" %></div>
<% end %>